<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/background"
    tools:context="com.example.alvaroalejandro.veintiuno21.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dealerCards"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:id="@+id/textView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/tx_dealerCards"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp"
        android:hint="cartas repartidor"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tx_playerCards"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="13dp"
        android:text="@string/playerCards"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/tx_playerCards"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/restoMazo"
        android:layout_alignEnd="@+id/tx_dealerCards"
        android:layout_alignRight="@+id/tx_dealerCards"
        android:layout_marginBottom="134dp"
        android:hint="cartas jugador"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/stand"
        android:id="@+id/bt_stand"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="stand" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hit"
        android:id="@+id/bt_hit"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="hit" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/sumDealer"
        android:hint="suma dealer"
        android:layout_below="@+id/tx_dealerCards"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:textAlignment="center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:hint="suma jugador"
        android:id="@+id/sumPlayer"
        android:layout_below="@+id/tx_playerCards"
        android:layout_alignRight="@+id/bt_deal"
        android:layout_alignEnd="@+id/bt_deal"
        android:layout_marginTop="11dp"
        android:textAlignment="center"/>/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/deal"
        android:id="@+id/bt_deal"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="playGame" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/restoMazo"
        android:layout_above="@+id/bt_stand"
        android:layout_centerHorizontal="true"
        android:hint="#cartas restantes"
        android:textAlignment="center"
        />

    <TextView
        android:id="@+id/won"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tx_dealerCards"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:hint="#Ganados"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/lost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/won"
        android:layout_alignRight="@+id/won"
        android:layout_below="@+id/won"
        android:layout_marginTop="13dp"
        android:hint="#Perdidos"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <ImageView
        android:id="@+id/imvPlayer"
        android:layout_width="400dp"
        android:layout_height="100dp"
        android:layout_above="@+id/sumPlayer"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="11dp"
        app:srcCompat="@android:color/transparent" />

</RelativeLayout>
